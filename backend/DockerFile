# Backend Dockerfile (Node.js + Express)
FROM node:20-alpine

# Create app directory
WORKDIR /usr/src/app

# Install dependencies first (use package.json only for cache)
COPY package.json package-lock.json* ./
RUN npm install --production

# Copy source
COPY src ./src

# Environment
ENV NODE_ENV=production
ENV PORT=8080
EXPOSE 8080

# Start command
CMD ["node", "src/index.js"]
